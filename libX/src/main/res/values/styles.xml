<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Progress bar -->
    <style name="ProgressBarXStyle" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/sesl_progress</item>
    </style>

    <style name="ProgressBarXStyle.Small" parent="@style/ProgressBarXStyle">
        <item name="android:maxWidth">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:minWidth">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_size_small</item>
    </style>

    <style name="ProgressBarXStyle.Large" parent="@style/ProgressBarXStyle">
        <item name="android:maxWidth">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:minWidth">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_size_large</item>
    </style>

    <style name="ProgressBarXStyle.Title" parent="@style/ProgressBarXStyle">
        <item name="android:maxWidth">@dimen/sesl_progress_bar_size_small_title</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_size_small_title</item>
        <item name="android:minWidth">@dimen/sesl_progress_bar_size_small_title</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_size_small_title</item>
    </style>

    <style name="ProgressBarXStyle.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@drawable/sesl_scrubber_progress_horizontal</item>
        <item name="android:progressDrawable">@drawable/sesl_scrubber_progress_horizontal</item>
    </style>

    <style name="ListSeparatorTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/sesl_list_subheader_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sesl_list_subheader_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/surface_color</item>
        <item name="android:paddingTop">@dimen/sesl_list_subheader_padding_top</item>
        <item name="android:paddingBottom">@dimen/sesl_list_subheader_padding_bottom</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textDirection">locale</item>
        <item name="android:paddingStart">?android:listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?android:listPreferredItemPaddingEnd</item>
    </style>

    <!--Switch-->
    <style name="SwitchStyle" parent="@android:style/Widget.CompoundButton">
        <item name="android:textOn">@string/switch_text_on</item>
        <item name="android:textOff">@string/switch_text_off</item>
        <item name="android:background">@drawable/switch_background</item>
        <item name="android:thumb">@drawable/switch_thumb_selector</item>
        <item name="android:track">@drawable/switch_track_selector</item>
        <item name="track">@drawable/switch_track_selector</item>
        <item name="showText">false</item>
        <item name="switchTextAppearance">@style/TextAppearance.AppCompat.Widget.Switch</item>
    </style>

    <!--Button-->
    <style name="ButtonTextStyle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/btn_min_height</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/ButtonTextStyle</item>
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">?rippleColor</item>
        <item name="backgroundTint">@color/btn_default_background</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
    </style>

    <style name="ButtonStyle.Text">
        <item name="android:textColor">@color/btn_transparent_text_color</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ButtonStyle.Outlined">
        <item name="android:textColor">@color/btn_transparent_text_color</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/mtrl_btn_stroke_color_selector</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ButtonStyle.Colored">
        <item name="backgroundTint">@color/btn_colored_background</item>
        <item name="android:textColor">@color/btn_colored_text_color</item>
    </style>

    <!--Seekbar-->
    <style name="SeekBarStyle" parent="@android:style/Widget">
        <item name="android:background">@drawable/sesl_seek_bar_background_borderless</item>
        <item name="android:focusable">true</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_min_height</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/sesl_scrubber_progress_horizontal</item>
        <item name="android:progressDrawable">@drawable/sesl_scrubber_progress_horizontal</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_min_height</item>
        <item name="android:thumb">@drawable/sesl_scrubber_control_anim</item>
        <item name="android:paddingStart">@dimen/sesl_seekbar_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/sesl_seekbar_padding_horizontal</item>
        <item name="android:mirrorForRtl">true</item>
        <item name="android:splitTrack">false</item>
    </style>

    <!-- CardView -->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/radius_large</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">?colorSurfaceVariant</item>
    </style>

    <!-- CheckBox -->
    <style name="CheckBoxStyle" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:minWidth">?minTouchTargetSize</item>
        <item name="android:minHeight">?minTouchTargetSize</item>
        <item name="android:button">@drawable/btn_check</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="useMaterialThemeColors">true</item>
    </style>

    <!-- Radio Button -->
    <style name="RadioButtonStyle" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:minWidth">?minTouchTargetSize</item>
        <item name="android:minHeight">?minTouchTargetSize</item>
        <item name="android:button">@drawable/btn_radio</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="useMaterialThemeColors">true</item>
    </style>

    <!--Spinner-->
    <style name="SpinnerStyle" parent="@style/Platform.Widget.AppCompat.Spinner">
        <item name="android:gravity">start|center</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="paddingStart">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <item name="android:popupAnimationStyle">@style/PopupAnimStyle</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:popupElevation">@dimen/popup_menu_elevation</item>
        <item name="overlapAnchor">true</item>
    </style>

    <style name="PopupAnimStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/sesl_list_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/sesl_list_popup_exit</item>
    </style>

    <style name="SpinnerDropDownItemStyle" parent="@android:style/Widget.Material.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/DropDownItemTextStyle</item>
        <item name="android:checkMark">@drawable/spinner_item_checkmark</item>
        <item name="android:minWidth">@dimen/popup_menu_item_min_width</item>
        <item name="android:minHeight">@dimen/popup_menu_item_min_height</item>
        <item name="android:paddingStart">@dimen/popup_menu_item_padding_start</item>
        <item name="android:paddingTop">@dimen/popup_menu_item_padding_top</item>
        <item name="android:paddingEnd">@dimen/popup_menu_item_padding_end</item>
        <item name="android:paddingBottom">@dimen/popup_menu_item_padding_bottom</item>
    </style>

    <style name="DropDownItemTextStyle">
        <item name="android:textSize">@dimen/popup_menu_item_text_size</item>
        <item name="android:textColor">@color/spinner_dropdown_text_color</item>
    </style>

    <!-- AppBarLayout -->
    <style name="AppBarLayoutStyle" parent="@android:style/Widget">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:touchscreenBlocksFocus">false</item>
        <item name="android:keyboardNavigationCluster">true</item>
    </style>

    <style name="CollapsingToolbarLayoutStyle" parent="@android:style/Widget">
        <item name="android:background">?colorSurface</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="expandedTitleTextAppearance">@style/ToolbarExpandedTitleTextStyle</item>
        <item name="collapsedTitleTextAppearance">@style/ToolbarCollapsedTitleTextStyle</item>
        <item name="statusBarScrim">?colorPrimaryDark</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:minHeight">?actionBarSize</item>
        <item name="background">?colorSurface</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dip</item>
        <item name="android:contentInsetEnd">0dip</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextAppearance">@style/ToolbarCollapsedTitleTextStyle</item>
        <item name="subtitleTextAppearance">@style/ToolbarCollapsedSubtitleTextStyle</item>
        <item name="titleMargin">0.0dip</item>
        <item name="maxButtonHeight">?actionBarSize</item>
        <item name="buttonGravity">top</item>
        <item name="collapseIcon">?homeAsUpIndicator</item>
    </style>

    <style name="ToolbarNavButtonStyle" parent="@android:style/Widget.Material.Toolbar.Button.Navigation">
        <item name="android:background">?actionBarItemBackground</item>
        <item name="android:scaleType">center</item>
        <item name="android:paddingStart">8.0dip</item>
    </style>

    <style name="ToolbarCollapsedTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ToolbarCollapsedSubtitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">@dimen/toolbar_subtitle_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ToolbarExpandedTitleTextStyle" parent="@style/ToolbarCollapsedTitleTextStyle">
        <item name="android:textSize">@dimen/appbar_expanded_title_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="ToolbarExpandedSubtitleTextStyle" parent="ToolbarCollapsedSubtitleTextStyle">
        <item name="android:textSize">@dimen/appbar_expanded_subtitle_text_size</item>
    </style>

    <!-- Dialog -->
    <style name="DialogAnimStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <style name="DialogTitleStyle" parent="@android:style/Widget">
        <item name="android:textSize">@dimen/dialog_title_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="DialogTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/dialog_body_text_size</item>
        <item name="android:textColor">@color/dialog_body_text_color</item>
    </style>

    <style name="DialogTextInverseStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textColorHighlight">?android:textColorHighlightInverse</item>
        <item name="android:textColorHint">?android:textColorHintInverse</item>
        <item name="android:textColorLink">?android:textColorLinkInverse</item>
    </style>

    <style name="DialogTextListItemStyle" parent="@style/DialogTextStyle">
        <item name="android:textSize">@dimen/select_dialog_list_item_text_size</item>
        <item name="android:textColor">@color/select_dialog_list_item_text</item>
    </style>

    <style name="DialogTextListItemSecondaryStyle" parent="@style/DialogTextListItemStyle">
        <item name="android:textSize">@dimen/select_dialog_list_item_text_size_secondary</item>
        <item name="android:textColor">@color/dialog_sub_text_color_material</item>
    </style>

    <style name="DialogButtonStyle" parent="ButtonStyle.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">@dimen/dialog_button_min_width</item>
        <item name="android:minHeight">@dimen/dialog_button_min_height</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:layout">@layout/alert_dialog</item>
        <item name="listItemLayout">@layout/select_dialog_item</item>
        <item name="listLayout">@layout/select_dialog</item>
        <item name="multiChoiceItemLayout">@layout/select_dialog_multichoice</item>
        <item name="singleChoiceItemLayout">@layout/select_dialog_singlechoice</item>
    </style>

    <style name="DialogTheme" parent="Base.ThemeOverlay.AppCompat">
        <item name="android:backgroundDimAmount">@dimen/dialog_background_dim_amount</item>
        <item name="android:textAppearanceInverse">@style/DialogTextInverseStyle</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
        <item name="android:textAppearance">@style/DialogTextStyle</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/dialog_scrollbar_handle</item>
        <item name="android:scrollbarThumbVertical">@drawable/dialog_scrollbar_handle</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimStyle</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowElevation">@dimen/dialog_window_elevation</item>
        <item name="borderlessButtonStyle">@style/ButtonStyle</item>
        <item name="colorControlHighlight">@color/ripple_color</item>
        <item name="dialogPreferredPadding">@dimen/dialog_padding</item>
        <item name="listPreferredItemHeightSmall">@dimen/list_preferred_item_height_small</item>
        <item name="android:listPreferredItemPaddingStart">@dimen/select_dialog_padding_start</item>
        <item name="android:listPreferredItemPaddingEnd">@dimen/select_dialog_padding_end</item>
        <item name="listPreferredItemPaddingLeft">@dimen/select_dialog_padding_start</item>
        <item name="listPreferredItemPaddingStart">@dimen/select_dialog_padding_start</item>
        <item name="listPreferredItemPaddingRight">@dimen/select_dialog_padding_end</item>
        <item name="listPreferredItemPaddingEnd">@dimen/select_dialog_padding_end</item>
        <item name="textAppearanceListItem">@style/DialogTextListItemStyle</item>
        <item name="textAppearanceListItemSecondary">@style/DialogTextListItemSecondaryStyle</item>
        <item name="textAppearanceListItemSmall">@style/DialogTextListItemStyle</item>
        <item name="textColorAlertDialogListItem">@color/select_dialog_list_item_text</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@dimen/dialog_min_width_minor</item>
        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_minor</item>
    </style>

    <!-- Preferences -->
    <style name="PreferenceThemeStyle" parent="PreferenceThemeOverlay">
        <item name="preferenceStyle">@style/PreferenceStyle</item>
        <item name="preferenceCategoryStyle">@style/PreferenceCategoryStyle</item>
        <item name="preferenceFragmentCompatStyle">@style/PreferenceFragmentStyle</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragmentStyle</item>

        <item name="editTextPreferenceStyle">@style/EditTextPreferenceStyle</item>
        <item name="switchPreferenceStyle">@style/SwitchPreferenceStyle</item>
        <item name="checkBoxPreferenceStyle">@style/CheckBoxPreferenceStyle</item>
        <item name="dialogPreferenceStyle">@style/DialogPreferenceStyle</item>
        <item name="dropdownPreferenceStyle">@style/DropDownPreferenceStyle</item>
        <item name="seekBarPreferenceStyle">@style/SeekBarPreferenceStyle</item>
    </style>

    <style name="PreferenceStyle">
        <item name="android:layout">@layout/preference_layout</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="PreferenceCategoryStyle" parent="@style/PreferenceStyle">
        <item name="android:layout">@layout/preference_category</item>
        <item name="android:selectable">false</item>
        <item name="android:shouldDisableView">false</item>
    </style>

    <style name="DialogPreferenceStyle" parent="@style/PreferenceStyle">
        <item name="android:positiveButtonText">@android:string/ok</item>
        <item name="android:negativeButtonText">@android:string/cancel</item>
    </style>

    <style name="EditTextPreferenceStyle" parent="@style/DialogPreferenceStyle">
        <item name="android:dialogLayout">@layout/preference_dialog_edittext</item>
    </style>

    <style name="DropDownPreferenceStyle" parent="@style/PreferenceStyle">
        <item name="android:layout">@layout/preference_dropdown</item>
    </style>

    <style name="SeekBarPreferenceStyle" parent="@style/PreferenceStyle">
        <item name="android:layout">@layout/preference_widget_seekbar</item>
        <item name="adjustable">true</item>
        <item name="showSeekBarValue">false</item>
    </style>

    <style name="SwitchPreferenceStyle" parent="@style/PreferenceStyle">
        <item name="android:widgetLayout">@layout/preference_widget_switch</item>
        <item name="android:switchTextOn">@string/switch_text_on</item>
        <item name="android:switchTextOff">@string/switch_text_off</item>
    </style>

    <style name="CheckBoxPreferenceStyle" parent="@style/PreferenceStyle">
        <item name="android:widgetLayout">@layout/preference_widget_checkbox</item>
    </style>

    <style name="PreferenceFragmentStyle">
        <item name="android:divider">?android:listDivider</item>
    </style>
</resources>