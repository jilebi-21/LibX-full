<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Progress bar -->
    <style name="ProgressBarXStyle" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/sesl_progress</item>
    </style>

    <style name="ProgressBarXStyle.Small" parent="@style/ProgressBarXStyle">
        <item name="android:maxWidth">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:minWidth">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_size_small</item>
    </style>

    <style name="ProgressBarXStyle.Large" parent="@style/ProgressBarXStyle">
        <item name="android:maxWidth">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:minWidth">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_size_large</item>
    </style>

    <style name="ProgressBarXStyle.Title" parent="@style/ProgressBarXStyle">
        <item name="android:maxWidth">@dimen/sesl_progress_bar_size_small_title</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_size_small_title</item>
        <item name="android:minWidth">@dimen/sesl_progress_bar_size_small_title</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_size_small_title</item>
    </style>

    <style name="ProgressBarXStyle.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@drawable/sesl_scrubber_progress_horizontal</item>
        <item name="android:progressDrawable">@drawable/sesl_scrubber_progress_horizontal</item>
    </style>

    <style name="ListSeparatorTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/sesl_list_subheader_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sesl_list_subheader_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/background_color</item>
        <item name="android:paddingTop">@dimen/sesl_list_subheader_padding_top</item>
        <item name="android:paddingBottom">@dimen/sesl_list_subheader_padding_bottom</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textDirection">locale</item>
        <item name="android:paddingStart">?android:listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?android:listPreferredItemPaddingEnd</item>
    </style>

    <!--Switch-->
    <style name="SwitchStyle" parent="@android:style/Widget.CompoundButton">
        <item name="android:background">@drawable/sesl_switch_background</item>
        <item name="android:textOn">@string/sesl_on_text</item>
        <item name="android:textOff">@string/sesl_off_text</item>
        <item name="android:thumb">@drawable/sesl_switch_thumb_selector</item>
        <item name="showText">false</item>
        <item name="switchPadding">0.0dip</item>
        <item name="switchTextAppearance">@style/TextAppearance.AppCompat.Widget.Switch</item>
        <item name="track">@drawable/sesl_switch_track_selector</item>
    </style>

    <!--Button-->
    <style name="ButtonStyle" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:textAppearance">@style/ButtonTextStyle</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/sesl_btn_default</item>
        <item name="android:minHeight">36.0dip</item>
        <item name="android:maxLines">2</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonTextStyle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">@dimen/sesl_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sesl_btn_text_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonStyle.Transparent">
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:background">@drawable/sesl_btn_transparent</item>
    </style>

    <style name="ButtonStyle.Colored">
        <item name="android:backgroundTint">@color/sesl_btn_color_state</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonStyle.Filled">
        <item name="android:backgroundTint">@color/button_background_color</item>
        <item name="android:textColor">@color/item_color</item>
    </style>

    <!--Seekbar-->
    <style name="SeekBarStyle" parent="@android:style/Widget">
        <item name="android:background">@drawable/sesl_seek_bar_background_borderless</item>
        <item name="android:focusable">true</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_min_height</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/sesl_scrubber_progress_horizontal</item>
        <item name="android:progressDrawable">@drawable/sesl_scrubber_progress_horizontal</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_min_height</item>
        <item name="android:thumb">@drawable/sesl_scrubber_control_anim</item>
        <item name="android:paddingStart">@dimen/sesl_seekbar_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/sesl_seekbar_padding_horizontal</item>
        <item name="android:mirrorForRtl">true</item>
        <item name="android:splitTrack">false</item>
    </style>

    <!-- CardView -->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">26dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/item_background_color</item>
    </style>

    <!-- CheckBox -->
    <style name="CheckBoxStyle" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:minWidth">?minTouchTargetSize</item>
        <item name="android:minHeight">?minTouchTargetSize</item>
        <item name="android:background">@drawable/sesl_control_background</item>
        <item name="android:button">@drawable/sesl_btn_check</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="useMaterialThemeColors">true</item>
    </style>

    <!-- Radio Button -->
    <style name="RadioButtonStyle" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:minWidth">?minTouchTargetSize</item>
        <item name="android:minHeight">?minTouchTargetSize</item>
        <item name="android:background">@drawable/sesl_control_background</item>
        <item name="android:button">@drawable/sesl_btn_radio</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="useMaterialThemeColors">true</item>
    </style>

    <!--Spinner-->
    <style name="SpinnerStyle" parent="@style/Platform.Widget.AppCompat.Spinner">
        <item name="android:gravity">start|center</item>
        <item name="android:background">@drawable/sesl_spinner_background</item>
        <item name="android:clickable">true</item>
        <item name="android:dropDownSelector">?android:listChoiceBackgroundIndicator</item>
        <item name="android:popupBackground">@drawable/sesl_menu_popup_background</item>
        <item name="android:popupAnimationStyle">@style/ListPopupAnimStyle</item>
        <item name="android:dropDownHorizontalOffset">0.0dip</item>
        <item name="android:dropDownVerticalOffset">0.0dip</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:popupElevation">@dimen/sesl_menu_popup_elevation</item>
        <item name="overlapAnchor">true</item>
    </style>

    <style name="ListPopupAnimStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/sesl_list_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/sesl_list_popup_exit</item>
    </style>

    <style name="SpinnerDropDownItemStyle" parent="@android:style/Widget.Material.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/DropDownItemTextStyle</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/sesl_popup_menu_item_top_padding</item>
        <item name="android:paddingBottom">@dimen/sesl_popup_menu_item_bottom_padding</item>
        <item name="android:checkMark">@drawable/sesl_spinner_checked_ic_selector</item>
        <item name="android:minWidth">@dimen/sesl_popup_menu_item_min_width</item>
        <item name="android:minHeight">@dimen/sesl_popup_menu_item_min_height</item>
        <item name="android:paddingStart">@dimen/sesl_popup_menu_item_start_padding</item>
        <item name="android:paddingEnd">@dimen/sesl_popup_menu_item_end_padding</item>
        <item name="checkMarkGravity">end</item>
    </style>

    <style name="DropDownItemTextStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/sesl_popup_menu_item_text_size</item>
        <item name="android:textColor">@color/sesl_spinner_dropdown_text_color</item>
    </style>

    <!--PopupMenuStyle-->
    <style name="MenuPopupAnimStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/sesl_menu_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/sesl_menu_popup_exit</item>
    </style>

    <!-- AppBarLayout -->
    <style name="AppBarLayoutStyle" parent="@android:style/Widget">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:touchscreenBlocksFocus">false</item>
        <item name="android:keyboardNavigationCluster">true</item>
    </style>

    <style name="CollapsingToolbarLayoutStyle" parent="@android:style/Widget">
        <item name="android:background">@color/toolbar_background_color</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="expandedTitleTextAppearance">@style/ToolbarExpandedTitleTextStyle</item>
        <item name="collapsedTitleTextAppearance">@style/ToolbarCollapsedTitleTextStyle</item>
        <item name="statusBarScrim">?colorPrimaryDark</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:minHeight">?actionBarSize</item>
        <item name="background">@color/toolbar_background_color</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dip</item>
        <item name="android:contentInsetEnd">0dip</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextAppearance">@style/ToolbarCollapsedTitleTextStyle</item>
        <item name="subtitleTextAppearance">@style/ToolbarCollapsedSubtitleTextStyle</item>
        <item name="titleMargin">0.0dip</item>
        <item name="maxButtonHeight">?actionBarSize</item>
        <item name="buttonGravity">top</item>
        <item name="collapseIcon">?homeAsUpIndicator</item>
    </style>

    <style name="ToolbarNavButtonStyle" parent="@android:style/Widget.Material.Toolbar.Button.Navigation">
        <item name="android:background">?actionBarItemBackground</item>
        <item name="android:scaleType">center</item>
        <item name="android:paddingStart">8.0dip</item>
    </style>

    <style name="ToolbarCollapsedTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/toolbar_title_text_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ToolbarCollapsedSubtitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">@dimen/toolbar_subtitle_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/toolbar_subtitle_text_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ToolbarExpandedTitleTextStyle" parent="@style/ToolbarCollapsedTitleTextStyle">
        <item name="android:textSize">@dimen/appbar_expanded_title_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="ToolbarExpandedSubtitleTextStyle" parent="ToolbarCollapsedSubtitleTextStyle">
        <item name="android:textSize">@dimen/appbar_expanded_subtitle_text_size</item>
    </style>

    <!-- Preferences -->
    <style name="PreferenceThemeStyle" parent="PreferenceThemeOverlay">
        <item name="preferenceStyle">@style/PreferenceStyle</item>
        <item name="preferenceCategoryStyle">@style/PreferenceCategoryStyle</item>
        <item name="preferenceFragmentCompatStyle">@style/PreferenceFragmentStyle</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragmentStyle</item>

        <item name="editTextPreferenceStyle">@style/EditTextPreferenceStyle</item>
        <item name="switchPreferenceStyle">@style/SwitchPreferenceStyle</item>
        <item name="checkBoxPreferenceStyle">@style/CheckBoxPreferenceStyle</item>
        <item name="dialogPreferenceStyle">@style/DialogPreferenceStyle</item>
        <item name="dropdownPreferenceStyle">@style/DropDownPreferenceStyle</item>
        <item name="seekBarPreferenceStyle">@style/SeekBarPreferenceStyle</item>
    </style>

    <style name="PreferenceStyle">
        <item name="android:layout">@layout/preference_layout</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="PreferenceCategoryStyle" parent="@style/PreferenceStyle">
        <item name="android:layout">@layout/preference_category</item>
        <item name="android:selectable">false</item>
        <item name="android:shouldDisableView">false</item>
    </style>

    <style name="DialogPreferenceStyle" parent="@style/PreferenceStyle">
        <item name="android:positiveButtonText">@android:string/ok</item>
        <item name="android:negativeButtonText">@android:string/cancel</item>
    </style>

    <style name="EditTextPreferenceStyle" parent="@style/DialogPreferenceStyle">
        <item name="android:dialogLayout">@layout/preference_dialog_edittext</item>
    </style>

    <style name="DropDownPreferenceStyle" parent="@style/PreferenceStyle">
        <item name="android:layout">@layout/preference_dropdown</item>
    </style>

    <style name="SeekBarPreferenceStyle" parent="@style/PreferenceStyle">
        <item name="android:layout">@layout/preference_widget_seekbar</item>
        <item name="adjustable">true</item>
        <item name="showSeekBarValue">false</item>
    </style>

    <style name="SwitchPreferenceStyle" parent="@style/PreferenceStyle">
        <item name="android:widgetLayout">@layout/preference_widget_switch</item>
        <item name="android:switchTextOn">@string/sesl_on_text</item>
        <item name="android:switchTextOff">@string/sesl_off_text</item>
    </style>

    <style name="CheckBoxPreferenceStyle" parent="@style/PreferenceStyle">
        <item name="android:widgetLayout">@layout/preference_widget_checkbox</item>
    </style>

    <style name="PreferenceFragmentStyle">
        <item name="android:divider">?android:listDivider</item>
    </style>
</resources>