<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Progress bar -->
    <style name="ProgressBarXStyle" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/sesl_progress</item>
    </style>

    <style name="ProgressBarXStyle.Small" parent="@style/ProgressBarXStyle">
        <item name="android:maxWidth">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:minWidth">@dimen/sesl_progress_bar_size_small</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_size_small</item>
    </style>

    <style name="ProgressBarXStyle.Large" parent="@style/ProgressBarXStyle">
        <item name="android:maxWidth">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:minWidth">@dimen/sesl_progress_bar_size_large</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_size_large</item>
    </style>

    <style name="ProgressBarXStyle.Title" parent="@style/ProgressBarXStyle">
        <item name="android:maxWidth">@dimen/sesl_progress_bar_size_small_title</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_size_small_title</item>
        <item name="android:minWidth">@dimen/sesl_progress_bar_size_small_title</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_size_small_title</item>
    </style>

    <style name="ProgressBarXStyle.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@drawable/sesl_scrubber_progress_horizontal</item>
        <item name="android:progressDrawable">@drawable/sesl_scrubber_progress_horizontal</item>
    </style>

    <style name="ListSeparatorTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/sesl_list_subheader_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sesl_list_subheader_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/background_color</item>
        <item name="android:paddingTop">@dimen/sesl_list_subheader_padding_top</item>
        <item name="android:paddingBottom">@dimen/sesl_list_subheader_padding_bottom</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textDirection">locale</item>
        <item name="android:paddingStart">?android:listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?android:listPreferredItemPaddingEnd</item>
    </style>

    <!--Switch-->
    <style name="SwitchStyle" parent="@android:style/Widget.CompoundButton">
        <item name="android:background">@drawable/sesl_switch_background</item>
        <item name="android:textOn">@string/sesl_on_text</item>
        <item name="android:textOff">@string/sesl_off_text</item>
        <item name="android:thumb">@drawable/sesl_switch_thumb_selector</item>
        <item name="showText">false</item>
        <item name="switchPadding">0.0dip</item>
        <item name="switchTextAppearance">@style/TextAppearance.AppCompat.Widget.Switch</item>
        <item name="track">@drawable/sesl_switch_track_selector</item>
    </style>

    <!--Button-->
    <style name="ButtonStyle" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:textAppearance">@style/ButtonTextStyle</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/sesl_btn_default</item>
        <item name="android:minHeight">36.0dip</item>
        <item name="android:maxLines">2</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonTextStyle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">@dimen/sesl_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sesl_btn_text_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonStyle.Transparent">
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:background">@drawable/sesl_btn_transparent</item>
    </style>

    <style name="ButtonStyle.Colored">
        <item name="android:backgroundTint">@color/sesl_btn_color_state</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonStyle.Filled">
        <item name="android:backgroundTint">@color/button_background_color</item>
        <item name="android:textColor">@color/item_color</item>
    </style>

    <!--Seekbar-->
    <style name="SeekBarStyle" parent="@android:style/Widget">
        <item name="android:background">@drawable/sesl_seek_bar_background_borderless</item>
        <item name="android:focusable">true</item>
        <item name="android:maxHeight">@dimen/sesl_progress_bar_min_height</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/sesl_scrubber_progress_horizontal</item>
        <item name="android:progressDrawable">@drawable/sesl_scrubber_progress_horizontal</item>
        <item name="android:minHeight">@dimen/sesl_progress_bar_min_height</item>
        <item name="android:thumb">@drawable/sesl_scrubber_control_anim</item>
        <item name="android:paddingStart">@dimen/sesl_seekbar_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/sesl_seekbar_padding_horizontal</item>
        <item name="android:mirrorForRtl">true</item>
        <item name="android:splitTrack">false</item>
    </style>

    <!-- CardView -->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">26dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/item_background_color</item>
    </style>

    <!-- CheckBox -->
    <style name="CheckBoxStyle" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:minWidth">?minTouchTargetSize</item>
        <item name="android:minHeight">?minTouchTargetSize</item>
        <item name="android:background">@drawable/sesl_control_background</item>
        <item name="android:button">@drawable/sesl_btn_check</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="useMaterialThemeColors">true</item>
    </style>

    <!-- Radio Button -->
    <style name="RadioButtonStyle" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:minWidth">?minTouchTargetSize</item>
        <item name="android:minHeight">?minTouchTargetSize</item>
        <item name="android:background">@drawable/sesl_control_background</item>
        <item name="android:button">@drawable/sesl_btn_radio</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="useMaterialThemeColors">true</item>
    </style>
</resources>