<?xml version="1.0" encoding="utf-8"?>
<com.libx.ui.views.ToolbarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:navigationIcon="@drawable/ic_samsung_arrow_left"
    app:title="Switch Preference Navigation">

    <com.libx.ui.widget.XLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:backgroundColor="?colorSurfaceVariant"
        app:cornerRadius="@dimen/radius_card">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Just a demo to display switch bar functionality"
            android:textColor="?colorOnSurfaceVariant"
            android:textSize="16sp" />
    </com.libx.ui.widget.XLinearLayout>

</com.libx.ui.views.ToolbarLayout>