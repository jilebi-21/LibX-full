<?xml version="1.0" encoding="utf-8"?>
<com.libx.ui.widget.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="10dp"
    app:cornerRadius="@dimen/radius_large"
    tools:backgroundColor="#fff">

    <TextView
        android:id="@+id/color_code_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="#FFFFFF" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/color_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="colorPrimary" />
</com.libx.ui.widget.XLinearLayout>